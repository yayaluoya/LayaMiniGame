{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "baseUrl": "./",
    // "strict": true,//强制所有代码都声明了类型
    "experimentalDecorators": true, //装饰器支持
    "emitDecoratorMetadata": true,
    //outdir用来指定编译后的文件所在目录
    "outDir": "./dist",
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
}